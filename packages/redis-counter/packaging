set -e -x

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export PATH=$GOROOT/bin:$PATH
export GOPATH=$PWD/redis-counter

mkdir -p ${BOSH_INSTALL_TARGET}/bin

go install github.com/drnic/redis-counter-example
find . -maxdepth 3
cp -a $PWD/redis-counter/bin/redis-counter-example ${BOSH_INSTALL_TARGET}/bin
